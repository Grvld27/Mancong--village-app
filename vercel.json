{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/(.*\\.js)",
      "dest": "/client/dist/$1"
    },
    {
      "src": "/(.*\\.css)",
      "dest": "/client/dist/$1"
    },
    {
      "src": "/(.*\\.png)",
      "dest": "/client/dist/$1"
    },
    {
      "src": "/(.*\\.jpg)",
      "dest": "/client/dist/$1"
    },
    {
      "src": "/(.*\\.svg)",
      "dest": "/client/dist/$1"
    },
    {
      "src": "/(.*\\.ico)",
      "dest": "/client/dist/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/client/dist/index.html"
    }
  ]
}
